{
  "compilerOptions": {
    "target": "es6", // ECMAScript target version
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noUnusedLocals": true, // Report errors on unused locals
    "noUnusedParameters": true, // Report errors on unused parameters
    "strict": true, // Enables all strict type-checking options
    "noImplicitAny": true, // Prevents the use of `any` without explicit typing
    "skipLibCheck": true, // Avoids checking declaration files (.d.ts)
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./components/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/types/app/blog/single/page.ts",
    ".next/types/app/page.ts",
    ".next/types/app/layout.tsx",
    ".next/types/app/blog/[single]/page.ts"
  ],
  "exclude": ["node_modules"]
}
